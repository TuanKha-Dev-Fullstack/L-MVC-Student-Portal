@{
}
@model L_MVC_Student_Portal.Models.AddStudentViewModel

<h1>Add student</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone"/>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed"/>
        <label class="form-label" for="subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>