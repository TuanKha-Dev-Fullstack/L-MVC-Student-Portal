@{
}

@model List<L_MVC_Student_Portal.Models.Entities.Student>

<h1>Students</h1>

<a class="btn btn-primary my-2" asp-controller="Student" asp-action="Add">Add new student</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td><a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>